<model-companion xmlns="http://www.fico.com/xpress/optimization-modeler/model-companion" version="5.0">
    <attachment-config>
		<attachment-tags>
			<attachment-tag name="schools-file" usage="single-file" mandatory="true">
				<description>A data source required by the Python model before it can execute (load or run). Must be a CSV file.</description>
				<attachments>
					<attachment>schools.csv</attachment>
				</attachments>
			</attachment-tag>
			<attachment-tag name="sites-file" usage="single-file" mandatory="true">
				<description>A data source required by the Python model before it can execute (load or run). Must be a CSV file.</description>
				<attachments>
					<attachment>sites.csv</attachment>
				</attachments>
			</attachment-tag>
			<attachment-tag name="distances-file" usage="single-file" mandatory="true">
				<description>A data source required by the Python model before it can execute (load or run). Must be a CSV file.</description>
				<attachments>
					<attachment>distances.csv</attachment>
				</attachments>
			</attachment-tag>
		</attachment-tags>
	</attachment-config>
    <client>
        <view-group title="Main">
            <vdl-view title="Introduction" path="introduction.vdl" requires-scenarios-loaded="false" empty-selection-default="true" />
            <vdl-view title="Input" path="input.vdl" default="true" />
            <vdl-view title="Results" path="results.vdl" />
            <vdl-view title="Comparison" path="comparison.vdl" />
        </view-group>
    </client>
</model-companion>